<% include ./partials/header.ejs %>
<div class="container">
    <h3 class="myHeader">New Contact</h3>
    <hr>
    <form action="/contacts" method="POST">
        <div class="form-group">
            <label for="firstname">First Name</label>
            <input type="text" class="form-control" value=" " name="contact[firstname]" placeholder="First Name">
        </div>
        <div class="form-group">
            <label for="lastname">Last Name</label>
            <input type="text" class="form-control" value=" " name="contact[lastname]" id="lastnameInput" placeholder="Last Name">
        </div>
        <div class="form-group">
            <label for="phone">Phone Number</label>
            <input type="text" class="form-control" value=" " name="contact[phone]" id="phoneInput" placeholder="Phone Number">
            </div>
        <button class="ui big green basic button" type="submit">Add Contact</button>
    </form>
</div>
